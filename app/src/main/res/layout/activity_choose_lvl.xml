<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:layout_marginBottom="147dp"
        android:background="#E9E5D7"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/api1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:shadowColor="#9C9C9C"
        android:shadowDx="40"
        android:shadowDy="40"
        android:shadowRadius="20"
        android:text="SOKOBAN"
        android:textColor="#FFFFFF"
        android:textSize="50dp"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:translationY="250px"
        tools:layout_editor_absoluteY="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HardcodÃ©"
                android:translationY="350px" />

            <Button
                android:id="@+id/hc1"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_marginTop="140dp"
                android:layout_weight="1"
                android:backgroundTint="#0EEA9D"
                android:elevation="10dp"
                android:text="1"
                app:cornerRadius="8px" />

            <Button
                android:id="@+id/hc2"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_marginTop="140dp"
                android:layout_weight="1"
                android:backgroundTint="#0EEA9D"
                android:elevation="10dp"
                android:text="2"
                app:cornerRadius="8px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="API"
                android:translationY="350px" />

            <Button
                android:id="@+id/api1"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_marginTop="140dp"
                android:layout_weight="1"
                android:backgroundTint="#0EEA9D"
                android:elevation="10dp"
                android:text="1"
                app:cornerRadius="8px" />

            <Button
                android:id="@+id/api2"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_marginTop="140dp"
                android:layout_weight="1"
                android:backgroundTint="#0EEA9D"
                android:elevation="10dp"
                android:text="2"
                app:cornerRadius="8px" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#C7C4C4"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>