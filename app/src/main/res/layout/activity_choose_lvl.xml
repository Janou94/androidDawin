<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="146dp"
                android:background="#E9E5D7"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:shadowColor="#9C9C9C"
                    android:shadowDx="40"
                    android:shadowDy="40"
                    android:shadowRadius="20"
                    android:text="SOKOBAN"
                    android:textColor="#FFFFFF"
                    android:textSize="50dp"
                    android:translationX="200px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="200px"
                    android:layout_height="wrap_content"
                    android:layout_margin="50px"
                    android:layout_marginStart="50px"
                    android:layout_marginLeft="50px"
                    android:layout_marginTop="50px"
                    android:layout_weight="1"
                    android:width="200px"
                    android:text="HardcodÃ©"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/hc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="50px"
                    android:layout_marginStart="50px"
                    android:layout_marginLeft="50px"
                    android:layout_marginTop="50px"
                    android:layout_weight="1"
                    android:width="250px"
                    android:height="250px"
                    android:backgroundTint="#0EEA9D"
                    android:elevation="10dp"
                    android:text="1"
                    app:cornerRadius="8px" />


                <Button
                    android:id="@+id/hc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="50px"
                    android:layout_marginStart="50px"
                    android:layout_marginLeft="50px"
                    android:layout_marginTop="50px"
                    android:layout_weight="1"
                    android:width="250px"
                    android:height="250px"
                    android:backgroundTint="#0EEA9D"
                    android:elevation="10dp"
                    android:text="2"
                    app:cornerRadius="8px" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/apiLvls"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="200px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:width="200px"
                    android:text="API"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMenu2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:width="50px"
                    android:maxWidth="50px"
                    android:rotation="180"
                    android:translationY="200px"
                    app:backgroundTint="#FB0404"
                    app:icon="@android:drawable/ic_menu_revert"
                    app:iconTint="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>